<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.demo.MainController"
           prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #1E1E2F, #0D0D1A);">

    <!-- 背景装饰 -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-padding: 30; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #4CAF50; -fx-border-width: 3; -fx-background-color: radial-gradient(center 50% 50%, radius 70%, #2C2C54, #1B1B2F);">

        <!-- 标题 -->
        <Label text="You are Player 1"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF; -fx-effect: dropshadow(gaussian, #4CAF50, 5, 0.5, 0, 0);" />
        <Label text="Please specify the board size (e.g., 6 x 7)"
               style="-fx-font-size: 16px; -fx-text-fill: #DDDDDD; -fx-alignment: center;" />

        <!-- 输入框 -->
        <TextField fx:id="boardSizeField" promptText="Enter board size"
                   style="-fx-background-color: #333333; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888888; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />

        <!-- 按钮 -->
        <Button text="Confirm" onAction="#handleBoardSizeConfirm"
                style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10 20; -fx-cursor: hand;" />
    </VBox>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.MainController"
      prefHeight="500.0" prefWidth="700.0"
      spacing="40" alignment="CENTER"
      style="-fx-background-color: radial-gradient(center 50% 50%, radius 70%, #1B1B2F, #3A6073); -fx-padding: 50; -fx-border-radius: 20; -fx-background-radius: 20; -fx-border-width: 5; -fx-border-color: linear-gradient(to right, #6A82FB, #FC5C7D);">

    <!-- 标题 -->
    <Text text="Welcome to the Game Lobby"
          style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: linear-gradient(to right, #6A82FB, #FC5C7D); -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 10, 0.8, 0, 0);" />

    <!-- 按钮容器 -->
    <VBox spacing="30" alignment="CENTER">
        <Button text="Random Match" fx:id="randomMatchButton" onAction="#suijiMatch"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to right, #6A82FB, #FC5C7D); -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 15 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.8, 0, 0);" />
        <Button text="Select Opponent" fx:id="selectOpponentButton" onAction="#chooseMatch"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to right, #FC5C7D, #6A82FB); -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 15 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.8, 0, 0);" />
        <Button text="View Users" fx:id="viewUsersButton" onAction="#showUsers"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to right, #FFD200, #FF5722); -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 15 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.8, 0, 0);" />
    </VBox>

    <!-- 底部装饰标签 -->
    <Text text="Your journey to fun begins here"
          style="-fx-font-size: 16px; -fx-fill: #A9A9A9;" />
</VBox>

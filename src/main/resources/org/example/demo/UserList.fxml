<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.MainController"
      prefHeight="600.0" prefWidth="800.0"
      style="-fx-background-color: radial-gradient(center 50% 50%, radius 70%, #1E1E2F, #3A3A5A); -fx-padding: 30; -fx-border-radius: 20; -fx-background-radius: 20; -fx-border-width: 5; -fx-border-color: linear-gradient(to right, #6A82FB, #FC5C7D);"
      spacing="30" alignment="CENTER">

    <!-- 标题 -->
    <Text text="User List"
          style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: linear-gradient(to right, #6A82FB, #FC5C7D); -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.8), 10, 0.8, 0, 0);" />

    <!-- 分割线 -->
    <Separator prefWidth="700" style="-fx-background-color: linear-gradient(to right, #6A82FB, #FC5C7D);" />

    <!-- 滚动区域 -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-padding: 10; -fx-border-color: transparent;">
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
            <!-- 用户信息展示 -->
            <VBox spacing="10" style="-fx-background-color: rgba(50, 50, 70, 0.8); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2; -fx-border-color: linear-gradient(to right, #6A82FB, #FC5C7D);">
                <Text text="Username: Player1" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;" />
                <Text text="Status: Online" style="-fx-font-size: 16px; -fx-fill: #6A82FB;" />
                <Text text="Game Records: Player2 - Win, Player3 - Lose"

                      style="-fx-font-size: 14px; -fx-fill: #BBBBBB;" />
            </VBox>

            <VBox spacing="10" style="-fx-background-color: rgba(50, 50, 70, 0.8); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2; -fx-border-color: linear-gradient(to right, #6A82FB, #FC5C7D);">
                <Text text="Username: Player2" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;" />
                <Text text="Status: Offline" style="-fx-font-size: 16px; -fx-fill: #FC5C7D;" />
                <Text text="Game Records: Player1 - Lose, Player4 - Win"

                      style="-fx-font-size: 14px; -fx-fill: #BBBBBB;" />
            </VBox>
            <VBox spacing="10" style="-fx-background-color: rgba(50, 50, 70, 0.8); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2; -fx-border-color: linear-gradient(to right, #6A82FB, #FC5C7D);">
                <Text text="Username: Player1" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;" />
                <Text text="Status: Online" style="-fx-font-size: 16px; -fx-fill: #6A82FB;" />
                <Text text="Game Records: Player2 - Win, Player3 - Lose"

                      style="-fx-font-size: 14px; -fx-fill: #BBBBBB;" />
            </VBox>
            <VBox spacing="10" style="-fx-background-color: rgba(50, 50, 70, 0.8); -fx-padding: 20; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-width: 2; -fx-border-color: linear-gradient(to right, #6A82FB, #FC5C7D);">
                <Text text="Username: Player1" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: white;" />
                <Text text="Status: Online" style="-fx-font-size: 16px; -fx-fill: #6A82FB;" />
                <Text text="Game Records: Player2 - Win, Player3 - Lose"

                      style="-fx-font-size: 14px; -fx-fill: #BBBBBB;" />
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- 返回按钮 -->
    <Button text="Back" onAction="#showUsersBack"
            style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to right, #6A82FB, #FC5C7D); -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 10 30; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.8, 0, 0);" />
</VBox>

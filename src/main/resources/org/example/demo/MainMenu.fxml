<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.MainController"
      prefHeight="450" prefWidth="600.0"
      style="-fx-background-color: radial-gradient(center 50% 50%, radius 70%, #16222A, #3A6073); -fx-padding: 40; -fx-border-radius: 20; -fx-background-radius: 20; -fx-border-width: 5; -fx-border-color: linear-gradient(to right, #6A82FB, #FC5C7D);"
      spacing="30" alignment="CENTER">

    <!-- 标题 -->
    <Label text="Welcome to the Game"
           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: linear-gradient(to right, #6A82FB, #FC5C7D); -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.6), 10, 0.8, 0, 0);" />

    <!-- 分割线 -->
    <Separator prefWidth="500" style="-fx-background-color: linear-gradient(to right, #6A82FB, #FC5C7D);" />

    <!-- 按钮容器 -->
    <VBox spacing="25" alignment="CENTER">
        <Button text="Login" fx:id="loginButton" onAction="#handleLogin"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to right, #6A82FB, #FC5C7D); -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 12 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.8, 0, 0);" />
        <Button text="Register" fx:id="registerButton" onAction="#handleRegister"
                style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: linear-gradient(to right, #FC5C7D, #6A82FB); -fx-text-fill: white; -fx-background-radius: 25; -fx-padding: 12 40; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.8, 0, 0);" />
    </VBox>

    <!-- 底部装饰标签 -->
    <Label text="Your journey begins here"
           style="-fx-font-size: 16px; -fx-text-fill: #A9A9A9;" />
</VBox>
